{% if render_li %}
  <li class="nav-ctas__cta">
{% else %}
  <div class="nav-ctas__cta">
{% endif %}

  {%- unless cta.settings.cta_link1 == blank or cta.settings.text1 contains '</a>' -%}
    <a data-cc-animate-click class="inner image-overlay image-overlay--bg-full" href="{{ cta.settings.cta_link1 }}">
  {% else %}
    <div class="inner image-overlay image-overlay--bg-full">
  {%- endunless -%}

  {% if cta.settings.image1 == blank %}
    <div class="placeholder-image placeholder--banner dark">
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
  {% else %}
    <div class="rimage-outer-wrapper rimage-background lazyload--manual fade-in"
         data-bgset="{% render 'bgset', image: cta.settings.image1 %}"
         data-sizes="auto"
         data-parent-fit="cover"
         style="background-position: {{ cta.settings.image1.presentation.focal_point }}">
      <noscript>
        <div class="rimage-wrapper" style="padding-top:{{ 1 | divided_by: cta.settings.image1.aspect_ratio | times: 100 }}%">
          <img src="{{ cta.settings.image1 | img_url: '1024x1024' }}" alt="{{ cta.settings.image1.alt | escape }}" class="rimage__image">
        </div>
      </noscript>
    </div>
  {% endif %}

  <div class="overlay-type overlay position--hcenter position--vcenter">
    <div class="inner">
      <div>
        <div class="overlay__content">
          {%- if cta.settings.subheading1 != blank -%}
            <div class="feature-subheader">
              {{ cta.settings.subheading1 }}
            </div>
          {% endif %}

          {%- if cta.settings.title1 != blank -%}
            <h2 class="line-1">
              {{ cta.settings.title1 }}
            </h2>
          {%- endif -%}

          {%- if cta.settings.text1 != blank -%}
            <div class="rte line-2">
              {{ cta.settings.text1 }}
            </div>
          {%- endif -%}

          {%- if cta.settings.button_label1 != blank -%}
            <div class="line-3">
              <span class="button no-hover">{{ cta.settings.button_label1 | escape }}</span>
            </div>
          {%- endif -%}
          <!-- Add Learn More button -->
          <a href="{{ cta.settings.cta_link1 }}" class="learn-more-button">
            <span class="learn-more-text learn-more-arrow">Learn More &rarr;</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  {%- unless cta.settings.cta_link1 == blank or cta.settings.text contains '</a>' -%}
    </a>
  {% else %}
    </div>
  {%- endunless -%}

{% if render_li %}
  </li>
{% else %}
  </div>
{% endif %}

