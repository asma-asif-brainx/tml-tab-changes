{{ 'section-tml-featured-kits.css' | asset_url | stylesheet_tag }}

{% style %}
  .tml-featured-kits--{{ section.id }} {
    --bg-image: url('{{ section.settings.background_image | image_url }}');
    --section-title-color: {{ section.settings.title_color }};
    --section-subtitle-color: {{ section.settings.subtitle_color }};
  }
  {% for block in section.blocks %}
    .tml-featured-kits__item--{{ block.id }} {
      --button-color: {{ block.settings.button_color }};
      --button-hover-bg: {{ block.settings.button_hover_bg }};
      --button-hover-color: {{ block.settings.button_hover_color }};
      --item-title-color: {{ block.settings.title_color }};
      --item-border-width: {{ block.settings.border_width }}px;
      --item-border-color: {{ block.settings.border_color }};
    }
  {% endfor %}
{% endstyle %}

<div class="tml-featured-kits tml-featured-kits--{{ section.id }} {% if section.settings.background_image %}has-bg-image{% endif %}">
  <div class="tml-featured-kits__container">
    <h2 class="tml-featured-kits__title">{{ section.settings.title }}</h2>
    <p class="tml-featured-kits__subtitle">{{ section.settings.subtitle }}</p>
    
    <div class="tml-featured-kits__grid">
      {% for block in section.blocks %}
        {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}" 
             class="tml-featured-kits__item tml-featured-kits__item--{{ block.id }}"
             {{ block.shopify_attributes }}>
            <h3 class="tml-featured-kits__item-title">{{ block.settings.title }}</h3>
            <span class="tml-featured-kits__read-more">
              {{ block.settings.button_text }}
              <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-arrow" viewBox="0 0 14 10">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M8.537.808a.5.5 0 01.817-.162l4 4a.5.5 0 010 .708l-4 4a.5.5 0 11-.708-.708L11.793 5.5H1a.5.5 0 010-1h10.793L8.646 1.354a.5.5 0 01-.109-.546z" fill="currentColor">
              </svg>
            </span>
          </a>
        {% else %}
          <div class="tml-featured-kits__item tml-featured-kits__item--{{ block.id }}"
               {{ block.shopify_attributes }}>
            <h3 class="tml-featured-kits__item-title">{{ block.settings.title }}</h3>
            <span class="tml-featured-kits__read-more">
              {{ block.settings.button_text }}
              <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-arrow" viewBox="0 0 14 10">
                <path fill-rule="evenodd" clip-rule="evenodd" d="M8.537.808a.5.5 0 01.817-.162l4 4a.5.5 0 010 .708l-4 4a.5.5 0 11-.708-.708L11.793 5.5H1a.5.5 0 010-1h10.793L8.646 1.354a.5.5 0 01-.109-.546z" fill="currentColor">
              </svg>
            </span>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "TML Featured Kits",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Need more information to help you decide?"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Explore the tabs below to learn more about the science behind our lights, our versatile panels, and mounting options. Once you're ready, browse our top recommendations and best-sellers, chosen for their benefits and features."
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Section Title Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Section Subtitle Color",
      "default": "#333333"
    }
  ],
  "blocks": [
    {
      "type": "kit_item",
      "name": "Kit Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Science of Light"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Read More Details"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Button Text Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "button_hover_bg",
          "label": "Button Hover Background",
          "default": "#f4f4f4"
        },
        {
          "type": "color",
          "id": "button_hover_color",
          "label": "Button Hover Text Color",
          "default": "#ffffff"
        },
        {
          "type": "range",
          "id": "border_width",
          "min": 0,
          "max": 10,
          "step": 1,
          "unit": "px",
          "label": "Border Width",
          "default": 1
        },
        {
          "type": "color",
          "id": "border_color",
          "label": "Border Color",
          "default": "#e5e5e5"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Item Title Color",
          "default": "#000000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "TML Featured Kits",
      "blocks": [
        {
          "type": "kit_item"
        },
        {
          "type": "kit_item"
        },
        {
          "type": "kit_item"
        }
      ]
    }
  ]
}
{% endschema %}
